@model IEnumerable<ProductBrand>

    <div class="d-flex justify-content-between align-items-center">
    <h1>Product Brands</h1>

    <p>
        <a class="btn btn-primary" asp-controller="Brand" asp-action="Create">Create New</a>
    </p>
    </div>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@brand.Name</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-controller="Brand" asp-action="Update" asp-route-id="@brand.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Brand" asp-action="Delete" asp-route-id="@brand.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>