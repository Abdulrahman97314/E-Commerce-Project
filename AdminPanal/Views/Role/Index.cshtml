@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>
<hr />
<Partial name="RoleForm" model="new RoleFormViewModel()">
    @if (Model.Count() > 0)
{
    <table class="table table-striped table-hover"> 
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(r=>r.Name)</th>
                    <th>Edit</th>
                    <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>               
                <td>@item.Name</td>
                <td><a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                <td><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
            </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is no Records</h2>
    </div>
}
    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
