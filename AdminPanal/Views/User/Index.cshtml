@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(u => u.UserName)</th>
                <th>@Html.DisplayNameFor(u => u.Email)</th>
                <th>@Html.DisplayNameFor(u => u.DisplayName)</th>
                <th>@Html.DisplayNameFor(u => u.Roles)</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(u => user.UserName)</td>
                    <td>@Html.DisplayFor(u => user.Email)</td>
                    <td>@Html.DisplayFor(u => user.DisplayName)</td>
                    <td>@string.Join(",",user.Roles.ToList())</td>
                    <td><a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@user.Id"><i class="fas fa-pen"></i> Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        No users found.
    </div>
}
@section Scripts{
<partial name="_ValidationScriptsPartial" />
}